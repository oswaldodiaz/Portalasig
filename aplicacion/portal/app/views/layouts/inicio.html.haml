    #cuerpo

      - if flash[:error] || flash[:mensaje] || flash[:exito]
        - if flash[:error]
          -mensaje = flash[:error]
          -clase = "alert alert-error"
        - if flash[:mensaje]
          -mensaje = flash[:mensaje]
          -clase = "alert alert-info"
        - if flash[:exito]
          -mensaje = flash[:exito]
          -clase = "alert alert-success"

      #mensajes{:style => "margin:10px 20px 0px 20px;display:none", :class=>clase}
        %button{:class=>"close eliminar_mensaje", "data-dismiss"=>"modal", "aria-hidden"=>"true"}x
        #flash
          -if mensaje
            = mensaje
            :javascript
              $(document).ready(function() {
                $("#mensajes").show();    
              });

      .row-fluid{:style => "margin-top:10px;"}
        .span2
          #panel_izquierdo
            -carreras = ["Biología", "Computación", "Geoquímica", "Física", "Matemática", "Química", "Complementaria"]
            -existe = false
            -unless session[:usuario] && session[:usuario].es_administrador? && @titulo
              -if @asignatura
                -@carrera = @asignatura.asignatura_carrera.first.carrera.nombre
              -else
                -if @carrera
                  -carreras.each do |car|
                    -if params[:id] == car
                      -@carrera = car
                      -existe = true
                      -@titulo = @carrera

                -unless existe
                  -@carrera = carreras[0]
                  -unless @titulo
                    -@titulo = carreras[0]


            %strong Licenciaturas
            %ol{:class => "nav nav-list"}
              -["Biología", "Computación", "Geoquímica", "Física", "Matemática", "Química", "Complementaria"].each_with_index do |carrera, i|
                -if carrera == @carrera
                  -clase = "active"
                -else
                  -clase = ""
                %li{:class=>"#{clase}"}
                  =link_to "#{carrera}", :action => "index", :controller => "inicio", :id => carrera
            
            -if session[:usuario] && session[:usuario].es_administrador?
              %br
              %br
              %strong Opciones:     
              %br
                %ul{:class => "nav nav-list", :style => "width:70%"}
                  -if @seccion == "Asignaturas"
                    -clase_asignatura = "active"
                  %li{:class=>"#{clase_asignatura}"}
                    =link_to "Asignaturas", {:action => "asignaturas", :controller => "admin"}
                  -if @seccion == "Docentes"
                    -clase_docente = "active"
                  %li{:class=>"#{clase_docente}"}
                    =link_to "Docentes", {:action => "docentes", :controller => "admin"} 
                  -if @seccion == "Estudiantes"
                    -clase_estudiante = "active"
                  %li{:class=>"#{clase_estudiante}"}
                    =link_to "Estudiantes", {:action => "estudiantes", :controller => "admin"}

          
